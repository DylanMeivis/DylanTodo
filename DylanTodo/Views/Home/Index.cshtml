@using Microsoft.AspNetCore.Http; 
@model TodoList 
@{ ViewData["Title"] = "HomePage"; }

<div class="TodoHolder">
  <div class="container topmenu">
    <div class="row text-cente">
      <div class="col-2">
        <button id="menu" class="hamburger hamburger--collapse" type="button" data-toggle="collapse" data-target="#collapseMenu" aria-expanded="false" aria-controls="collapseMenu">
          <span class="hamburger-box">
          <span class="hamburger-inner"></span>
          </span>
        </button>
      </div>
      <div class="col-8 text-center">
        <h1 id="daymessage">Hello @(Model.User.UserName)</h1>
      </div>
      <div class="col-2 text-white">
        <h1 id="plusicon"><a data-toggle="collapse" href="#collapseAddTodo" aria-expanded="false" aria-controls="collapseAddTodo">&#43;</a></h1>
      </div>
    </div>
    <div class="collapse mt-3" id="collapseAddTodo">
      <form asp-controller="Home" asp-action="AddTodo" method="post">
          <input class="inputname" type="text" placeholder="Remember what?" asp-for="@Model.newTodo.Description"/>
      </form>
    </div>
    <div class="collapse mt-3" id="collapseMenu">
      <div class="card card-body">
        Hallo ik ben het menu 
      </div>
    </div>
  </div>
  <div class="container TodoHolder pb-2 overflow-auto">
        @foreach (var todo in Model.AllItems)
        {
    <div id="todoholder" class="container my-3">
        <div class="row py-3 text-center">
          <div class="col-2">
            <button class="checkboxbtn"><span id="checksign">C</span></button>
          </div>
          <div class="col-8 descriptionholder">
            <form asp-controller="Home" asp-action="UpdateTodo" method="post">
              <input
              class="descriptioninput form-control"
              type="text"
              value="@todo.Description"
              asp-for="newTodo.Description"
            />
            <input hidden value="@todo.Id" asp-for="newTodo.Id"/>
            </form>
          </div>
        <div class="col-2">
          <button
            type="button"
            class="close"
            aria-label="Close"
            onClick="alert('hi')"
          >
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      </div>
    </div>
        }
  </div>
</div>
<script>
  // Look for .hamburger
  var hamburger = document.querySelector(".hamburger");
  // On click
  hamburger.addEventListener("click", function() {
    // Toggle class "is-active"
    hamburger.classList.toggle("is-active");
    // Do something else, like open/close menu
  });
  var plusicon = document.querySelector('#plusicon');
    
  plusicon.addEventListener("click", function() {
    plusicon.classList.toggle("is-active");
  });
</script>
